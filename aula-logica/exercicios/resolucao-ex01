programa {
	funcao inicio() {
		inteiro num1, num2, op, resultado = 0
		caracter nova
		nova = 'S'
		
		enquanto (nova != 'N'){
		
		escreva ("Informe o primeiro número. \n")  
		leia (num1)
		escreva ("Informe o segundo número. \n")  
		leia (num2)
		escreva ("Escolha a operação: 1 - Soma; 2 - Subtração; 3 - Multiplicação; 4 - Divisão\n")  
		leia (op)
		
		se (op == 1){
		    resultado = num1 + num2
		}
		senao se (op == 2){
		   resultado = num1 - num2
	    }
		senao se (op == 3){
		   resultado = num1 * num2
		}
		senao se (op == 4){
		   resultado = num1 / num2
		}
		senao {
		   escreva ("Operação informada é inválida. \n")
		}  
		
		escreva ("O resultado da operação é: ", resultado)
		escreva ("\nDeseja realizar uma nova operação? [S/N] ")
		leia (nova)
		}
	}
}
